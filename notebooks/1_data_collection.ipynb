   "outputs": [],
   "source": [
    "import yfinance as yf\n",
    "import os\n",
    "\n",
    "btc = yf.Ticker(\"BTC-USD\")\n",
    "df = btc.history(start=\"2016-01-01\")\n",
    "os.makedirs('data/raw', exist_ok=True)\n",
    "df.to_csv('data/raw/bitcoin_data.csv')\n",
    "df.head()\n"
   ]
  }
